.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}
.search{
  text-align: center; 
}
.search-ipt{
    border-bottom:1px solid #ccc;
    height:100rpx;
}
.list{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.tips{
  text-align: center;
  font-size: 28rpx;
  color: #888;
  padding: 50rpx;
}
.tips .tips-img{
  vertical-align: middle;
  height:40rpx;
  width:40rpx;
  margin-right: 20rpx;
}
.tips .text{
  vertical-align: middle;
}

.detail{
  display: flex;
  flex-direction: row;
  padding:20rpx 20rpx;
  border-bottom:1rpx solid #ccc; 
}
.poster{
  width:200rpx;
  height:200rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  width:400rpx;
}
.meta .title{
  font-size:50rpx;
  margin-bottom: 20rpx;
}
.meta .sub-title{
  font-size:30rpx;
  margin-bottom: 20rpx;
}
.meta .info{
  font-size:30rpx;
  margin-bottom: 20rpx;
}

.rating{
  display:inline-block;
  width:80rpx;
  font-size:30rpx;
  padding:10rpx 10rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 30rpx;
}