.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}
.detail{
  display: flex;
  flex-direction: row;
  padding:20rpx 20rpx;
  border-bottom:1rpx solid #ccc; 
}
.poster{
  width:200rpx;
  height:200rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  width:400rpx;
}
.meta .title{
  font-size:50rpx;
  margin-bottom: 20rpx;
}
.meta .sub-title{
  font-size:30rpx;
  margin-bottom: 20rpx;
}
.meta .info{
  font-size:30rpx;
  margin-bottom: 20rpx;
}

.rating{
  display:inline-block;
  width:80rpx;
  font-size:30rpx;
  padding:10rpx 10rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 30rpx;
}